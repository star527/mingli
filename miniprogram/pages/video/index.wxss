/* pages/video/index.wxss */
.container {
  min-height: 100vh;
  background-color: var(--background-color);
}

/* 搜索栏样式 */
.search-bar {
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: var(--border-extra-light);
  border-radius: 60rpx;
  padding: 20rpx 30rpx;
}

.search-icon {
  font-size: 30rpx;
  margin-right: 15rpx;
  color: var(--text-secondary);
}

.placeholder {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 分类标签样式 */
.category-tabs {
  background-color: #fff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  position: sticky;
  top: 110rpx;
  z-index: 99;
}

.tabs-container {
  display: flex;
  padding: 0 30rpx;
}

.tab-item {
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: var(--text-regular);
  white-space: nowrap;
}

.tab-item.active {
  background-color: var(--primary-color);
  color: #f90;
}

/* 视频列表样式 */
.video-list {
  padding: 0 30rpx 30rpx;
}

.video-item {
  background-color: #fff;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.video-cover {
  position: relative;
  height: 300rpx;
  width: 100%;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.play-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100rpx;
  height: 100rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 40rpx;
}

.duration {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 24rpx;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
}

.video-info {
  padding: 20rpx;
}

.video-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.video-meta {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 15rpx;
}

.video-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag-item {
  background-color: var(--border-extra-light);
  color: var(--text-secondary);
  font-size: 24rpx;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: var(--text-secondary);
  font-size: 28rpx;
}