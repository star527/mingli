/* pages/video/detail.wxss */
@import '../../styles/common.wxss';

.video-detail-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 加载中骨架屏 */
.loading-skeleton {
  padding: 20rpx;
}

.video-placeholder {
  width: 100%;
  height: 450rpx;
  background-color: #e0e0e0;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

.info-placeholder {
  padding: 20rpx;
}

.title-placeholder {
  width: 80%;
  height: 50rpx;
  background-color: #e0e0e0;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

.meta-placeholder {
  width: 60%;
  height: 32rpx;
  background-color: #e0e0e0;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

.description-placeholder {
  width: 100%;
  height: 120rpx;
  background-color: #e0e0e0;
  border-radius: 8rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0% {
    opacity: 0.6;
  }
  50% {
    opacity: 0.8;
  }
  100% {
    opacity: 0.6;
  }
}

/* 视频播放器 */
.video-player {
  width: 100%;
  background-color: #000;
  position: relative;
  /* 确保容器有固定高度 */
  height: 450rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

video {
  width: 100%;
  height: 100%;
  /* 移除可能有兼容性问题的aspect-ratio */
  /* aspect-ratio: 16/9; */
}

/* 视频信息 */
.video-info {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.video-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.video-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.meta-label {
  color: #666;
}

.meta-value {
  color: #333;
}

/* 标签 */
.video-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.tag-item {
  padding: 8rpx 20rpx;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 视频描述 */
.video-description {
  margin-top: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.description-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
}

/* 相关视频 */
.related-videos {
  padding: 30rpx;
  background-color: #fff;
}

.related-list {
  margin-top: 20rpx;
}

.related-item {
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.related-video-wrapper {
  position: relative;
  width: 100%;
  aspect-ratio: 16/9;
  overflow: hidden;
}

.related-cover {
  width: 100%;
  height: 100%;
  display: block;
}

.duration {
  position: absolute;
  bottom: 12rpx;
  right: 12rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
}

.related-title {
  padding: 16rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.error-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.retry-btn {
  background-color: var(--primary-color);
  color: #fff;
  font-size: 28rpx;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.retry-btn::after {
  border: none;
}