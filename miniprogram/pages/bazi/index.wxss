/* pages/bazi/index.wxss */
:root {
  --primary-color: #8c4356; /* 传统中国红 */
  --primary-light: #b35a6c;
  --secondary-color: #d3a335; /* 金色 */
  --background-color: #f7f0e8; /* 米黄色背景 */
  --text-primary: #333333;
  --text-regular: #555555;
  --text-secondary: #888888;
  --border-color: #e0d4c0;
  --border-light: #f0e4d4;
  --border-extra-light: #f5efe6;
  --danger-color: #ff4d4f;
  --highlight-color: #8c4356;
}

.container {
  padding: 30rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 排盘表单样式 */
.bazi-form {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1px solid var(--border-color);
}

.form-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  color: var(--primary-color);
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.form-group {
  margin-bottom: 36rpx;
}

.form-label {
  font-size: 32rpx;
  color: var(--text-regular);
  margin-bottom: 18rpx;
  display: block;
  font-weight: 500;
}

/* 姓名输入框样式 */
.name-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 10rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  background-color: #fff;
  color: var(--text-primary);
  box-sizing: border-box;
}

.name-input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3rpx rgba(140, 67, 86, 0.1);
}

.placeholder-style {
  color: #c9c9c9;
  font-size: 30rpx;
}

/* 性别选择器 */
.gender-selector {
  display: flex;
  border: 1px solid var(--border-color);
  border-radius: 8rpx;
  overflow: hidden;
}

.gender-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: var(--text-regular);
  background-color: #fff;
}

.gender-item.selected {
  color: #fff;
  background-color: var(--primary-color);
}

/* 日期和时间选择器 */
.date-picker, .time-picker {
  border: 2rpx solid var(--border-color);
  border-radius: 10rpx;
  background-color: #fff;
}

.picker {
  padding: 24rpx;
  font-size: 32rpx;
  color: var(--text-primary);
  position: relative;
}

/* 计算按钮 */
.calculate-btn {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: #fff;
  text-align: center;
  padding: 28rpx 0;
  border-radius: 12rpx;
  font-size: 34rpx;
  font-weight: bold;
  margin-top: 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(140, 67, 86, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.calculate-btn:before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.calculate-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 8rpx rgba(140, 67, 86, 0.3);
}

.calculate-btn:active:before {
  left: 100%;
}

/* 历史记录部分 */
.history-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1px solid var(--border-color);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid var(--border-color);
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.view-all {
  display: flex;
  align-items: center;
  color: var(--text-regular);
  font-size: 28rpx;
}

.arrow {
  font-size: 24rpx;
  margin-left: 8rpx;
}

/* 历史记录列表 */
.history-list {
  margin-top: 10rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid var(--border-color);
  transition: background-color 0.2s ease;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background-color: rgba(140, 67, 86, 0.05);
}

.record-info {
  flex: 1;
  margin-right: 20rpx;
}

.record-date {
  display: block;
  font-size: 30rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.record-time {
  display: block;
  font-size: 26rpx;
  color: var(--text-regular);
  margin-top: 4rpx;
}

.record-pillars {
  flex: 2;
  display: flex;
  justify-content: space-around;
  margin: 0 20rpx;
}

.pillar-item {
  font-size: 28rpx;
  padding: 8rpx 16rpx;
  background-color: var(--background-color);
  border-radius: 8rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.record-actions {
  display: flex;
  align-items: center;
}

.action-icon {
  font-size: 36rpx;
  margin-left: 20rpx;
  transition: transform 0.2s ease;
}

.action-icon:active {
  transform: scale(1.2);
}

.favorite {
  color: #ffb800;
}

.delete {
  color: #999;
}

.delete:active {
  color: #ff4d4f;
}

.empty-history {
  text-align: center;
  padding: 60rpx 0;
  color: var(--text-regular);
  font-size: 28rpx;
}